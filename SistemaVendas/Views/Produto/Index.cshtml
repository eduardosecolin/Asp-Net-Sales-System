
@{
	ViewData["Title"] = "Lista de Produtos";
}
@model IEnumerable<SistemaVendas.Models.Produtos>


<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
	<thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.VlUnitario)</th>
            <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
            <th>@Html.DisplayNameFor(model => model.LinkFoto)</th>
        </tr>
	</thead>
	<tbody>
		@{
			foreach (var item in (List<Produtos>)ViewBag.Produtos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlUnitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                <img src="@item.LinkFoto" width="40" height="50" />
            </td>
            <td>
                <button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button>
                <button type="button" class="btn btn-info" onclick="Detalhes(@item.Id)">Detalhes</button>
                <button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Excluir</button>
            </td>
        </tr>
			}
		}
	</tbody>
</table>
<br />
<button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">Cadastrar Produto</button>

<script>
	function Cadastrar() {
		window.location.href = "../Produto/Cadastro";
	}
	function Editar(id) {
        window.location.href = "../Produto/Editar/" + id;
	}
	function Detalhes(id) {
        window.location.href = "../Produto/Detalhes/" + id;
	}
	function Excluir(id) {
        window.location.href = "../Produto/Excluir/" + id;
	}
</script>

