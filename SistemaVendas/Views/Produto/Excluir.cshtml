
@model SistemaVendas.Models.Produtos

@{
	ViewData["Title"] = "Excluir Produto";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir o registro?</h3>

<dl class="dl-horizontal">
    <dt>
        Produto:
    </dt>
	<dd>
		@Html.DisplayFor(model => model.Nome)
	</dd>
</dl>
<form asp-action="Excluir">
	<input type="hidden" asp-for="Id" />
	<input type="submit" value="Sim" class="btn btn-danger" />
	<a asp-action="Index" class="btn btn-success">Não</a>
</form>


<script>

	function Sim() {

	}

	function Nao() {
        window.location.href = "../../Produto/Index";
	}

</script>
