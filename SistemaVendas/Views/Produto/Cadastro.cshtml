
@model SistemaVendas.Models.Produtos

@{
    ViewData["Title"] = "Cadastro de Produtos";
}

<h2>@ViewData["Title"]</h2>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Produto" asp-action="Cadastro">

            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Nome" type="text" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                @*@{ 
                    var vDescricao = string.Empty;
                    try {
                        vDescricao = ViewBag.Produtos.Descicao;
                    }
                    catch { }
                }
                @Html.TextArea("Descricao", vDescricao, new { @class="form-control"})*@
                <input asp-for="Descricao" type="text" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Valor Unitário</label>
                <input asp-for="VlUnitario" type="text" class="form-control" value="0,00" />
                <span asp-validation-for="VlUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Quantidade</label>
                <input asp-for="Quantidade" type="text" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Link Foto</label>
                <input asp-for="LinkFoto" type="text" class="form-control" />
                <span asp-validation-for="LinkFoto" class="text-danger"></span>
            </div>

            <button type="submit" class=" btn btn-block btn-success">Cadastrar</button>
        </form>
    </div>
</div>




