@model SistemaVendas.Models.Produtos

@{
	ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<br />
<div class="row">
	<div class="col-md-4">
        <form asp-controller="Produto" asp-action="Editar">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UnidadeMedida" />

            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Nome" type="text" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Descrição</label>
                @*@{
                    var vDescricao = string.Empty;
                    try {
                        vDescricao = ViewBag.Produtos.Descicao;
                    }
                    catch { }
                }
                @Html.TextArea("Descricao", vDescricao, new { @class = "form-control" })*@
                <input asp-for="Descricao" type="text" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Valor Unitário</label>
                <input asp-for="VlUnitario" type="text" class="form-control" />
                <span asp-validation-for="VlUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Quantidade</label>
                <input asp-for="Quantidade" type="text" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Link Foto</label>
                <input asp-for="LinkFoto" type="text" class="form-control" />
                <span asp-validation-for="LinkFoto" class="text-danger"></span>
            </div>

            <button type="submit" class=" btn btn-block btn-success">Salvar</button>
            <a asp-action="Index">Voltar</a>
        </form>
	</div>
</div>

