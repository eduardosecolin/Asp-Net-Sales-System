
@model SistemaVendas.Models.Vendedores

@{
    ViewData["Title"] = "Cadastro de Vendedores";
}

<h2>@ViewData["Title"]</h2>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Vendedor" asp-action="Cadastro">

            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Nome" type="text" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <input asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class=" btn btn-block btn-success">Cadastrar</button>
        </form>
    </div>
</div>




