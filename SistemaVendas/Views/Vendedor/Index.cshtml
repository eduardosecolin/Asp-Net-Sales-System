
@{
	ViewData["Title"] = "Lista de Vendedores";
}
@model IEnumerable<SistemaVendas.Models.Vendedores>


<h2>Lista de Vendedores</h2>

<table class="table table-striped table-hover">
	<thead>
		<tr class="success">
			<th>@Html.DisplayNameFor(model => model.Nome)</th>
			<th>@Html.DisplayNameFor(model => model.Email)</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var item in (List<Vendedores>)ViewBag.Vendedores) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Nome)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Email)
			</td>
			<td>
				<button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button>
				<button type="button" class="btn btn-info" onclick="Detalhes(@item.Id)">Detalhes</button>
				<button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Excluir</button>
			</td>
		</tr>
			}
		}
	</tbody>
</table>
<br />
<button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">Cadastrar Vendedor</button>

<script>
	function Cadastrar() {
		window.location.href = "../Vendedor/Cadastro";
	}
	function Editar(id) {
        window.location.href = "../Vendedor/Editar/" + id;
	}
	function Detalhes(id) {
        window.location.href = "../Vendedor/Detalhes/" + id;
	}
	function Excluir(id) {
        window.location.href = "../Vendedor/Excluir/" + id;
	}
</script>

